<html lang="en">

<head>
    <link rel="stylesheet" href="/layui/css/layui.css">

    <style type="text/css">
        p {
            margin-top: 10px;
        }
    </style>

    <meta charset="UTF-8">
    <title>index</title>
    <style type="text/css">
        body {
            background: #fafff3;
            font-size: 14px;
            color: #333;
        }
    </style>
</head>
<script src="/layui/layui.js"></script>
<script src="http://code.jquery.com/jquery-latest.js"></script>

<body>


    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>设置服务器时间</legend>
    </fieldset>


    <form class="layui-form" action="" style="margin-left: 20px;">


        <div class="layui-form-item">

                <div class="layui-input-inline">
                    <input type="text" class="layui-input" name="date" id="date" placeholder="不填可还原时间">
                </div>
           

            <script>
                layui.use('laydate', function () {
                    var laydate = layui.laydate;
                    laydate.render({
                        elem: '#date'
                        , type: 'datetime',
                        format: 'yyyyMMdd HH:mm:ss'
                    });
                });
            </script>
        </div>

        <div class="layui-form-item">
            
                <button class="layui-btn" lay-submit lay-filter="setTime">设置时间</button></p>
                <button class="layui-btn" lay-submit lay-filter="resetServer">重启服务器</button>
            
        </div>
    </form>

    <script>
        //Demo
        layui.use('form', function () {
            var form = layui.form;

            //监听提交
            form.on('submit(setTime)', function (form) {
                console.log(form);
                $.ajax({
                    type: "POST",
                    url: "./ajax",
                    dataType: 'json',
                    data: {code:"setTime",date:form.field.date},
                    success: function (msg) {
                        msg = JSON.stringify(msg);
                        layer.msg(msg);
                    }
                });

                return false;
            });

            //监听提交
            form.on('submit(resetServer)', function (data) {

                $.ajax({
                    type: "POST",
                    url: "./ajax",
                    dataType: 'json',
                    data: {code:'resetServer'},
                    success: function (msg) {  
                        msg = JSON.stringify(msg);
                        layer.msg(msg) 
                    }  
                });
                return false;
            });
        });
    </script>



</body>

</html>